<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PLAYGROUND" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul_logos</item>
        <item name="colorPrimaryVariant">@color/azul_fondo</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/azul_logos</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">35sp</item>
        <item name="android:background">@drawable/rounded_button_background</item>
        <!-- Otros atributos que desees aplicar a todos los botones -->
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <!-- Cambia los colores segÃºn tus preferencias -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/azul_fondo</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
</resources>